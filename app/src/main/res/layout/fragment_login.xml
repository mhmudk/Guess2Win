<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BottomNavigation.StepTwo.StepTwo">

    <ImageView
        android:layout_width="@dimen/_220sdp"
        android:layout_height="@dimen/_180sdp"
        android:src="@drawable/stepthree_team"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.216" />

    <Button
        android:id="@+id/create"

        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_shape_translate"
        android:drawableRight="@drawable/translate"
        android:text="English"
        android:fontFamily="@font/cairo"
        android:textAlignment="center"
android:paddingRight="@dimen/_5sdp"
        android:textAllCaps="false"
        android:textColor="#575757"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/cairo_semibold"
        android:gravity="center"
        android:text="قم بإنشاء ملفك الشخصى"
        android:textColor="#1C1C1C"
        android:textSize="@dimen/_25ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.54" />

    <TextView
        android:layout_width="@dimen/_280sdp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cairo"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:text="للمشاركة بكافة التصنيفات ولمشاهدة
الفيديوهات للوصول للمركز الأول"
        android:textAlignment="gravity"
        android:textColor="#575757"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.645">

    </TextView>

    <Button
        android:id="@+id/button_facebook"
        android:layout_width="@dimen/_270sdp"
        android:layout_height="@dimen/_38sdp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/cairo_semibold"
        android:text="فيسبوك"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:paddingLeft="@dimen/_90sdp"
        android:paddingRight="@dimen/_90sdp"
        android:drawableRight="@drawable/facebook"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.633"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.847" />

    <Button
        android:id="@+id/button_google"
        android:layout_width="@dimen/_270sdp"
        android:layout_height="@dimen/_38sdp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/cairo_semibold"
        android:paddingLeft="@dimen/_90sdp"
        android:paddingRight="@dimen/_90sdp"
        android:drawableRight="@drawable/google"
        android:text="جوجل"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.636"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.939" />


</androidx.constraintlayout.widget.ConstraintLayout>